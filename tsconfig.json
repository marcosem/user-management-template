{
    "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ES2023", "DOM"],
    "module": "nodenext",
    "target": "ES2023",
    "types": [],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "strictPropertyInitialization": false,
    //"isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },

    // For typeorm
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "ts-node": {
      "require": ["tsconfig-paths/register"]
  },
  "exclude": ["eslint.config.mjs", "dist"]
}
